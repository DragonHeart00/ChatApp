<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">


    <ImageView
        android:id="@+id/profile_avatar"
        android:layout_width="238dp"
        android:layout_height="221dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:scaleType="fitXY"
        android:src="@drawable/pr" />

    <TextView
        android:id="@+id/profile_displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Display Name"

        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_displayname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="User's Status"

        android:textSize="20sp" />

    <TextView
        android:id="@+id/profile_friends_info"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="N Friends | N Mutual Friends"
        android:textSize="18sp" />

    <Button
        android:id="@+id/profile_btnSendFriendRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_friends_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp"
        android:text="Send friend request"
        android:textStyle="bold" />

    <Button
        android:id="@+id/profile_btnCancelRequest"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_below="@+id/profile_btnUnfriend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp"
        android:text="Cancel friend request"
        android:textStyle="bold" />

    <Button
        android:id="@+id/profile_btnUnfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_friends_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp"
        android:text="Unfriend"
        android:textStyle="bold" />

    <Button
        android:id="@+id/profile_btnAcceptRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_btnSendFriendRequest"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp"
        android:text="Accept"
        android:textStyle="bold" />

    <Button
        android:id="@+id/profile_btnDeclineRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_btnSendFriendRequest"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="50dp"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp"
        android:text="Decline"
        android:textStyle="bold" />

</RelativeLayout>